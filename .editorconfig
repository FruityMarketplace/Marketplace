# EditorConfig after https://EditorConfig.org

root = true

[*]
# all files, unix-style line endings
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 4

[*.{c,cpp,cc,h,hpp}]
indent_style = tab
indent_size = 8

[*.py] # PEP 8
charset = utf-8
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = tab
indent_size = 4
